<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>門禁系統</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Joinlist.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">門禁系統</h2>


        <div class="row mb-3">
            <div class="col-auto">
                <button class="btn btn-primary mb-2" onclick="showAddDoorSystemModal()">新增門禁資訊</button>
            </div>
        </div>


        <div class="row mb-3">
            <div class="col">
                <table class="table">
                    <thead class="custom-table-header">
                        <tr>
                            <th>日期</th>
                            <th>Session</th>
                            <th>Session Name</th>
                            <th>Room</th>
                            <th>時段</th>
                        </tr>
                    </thead>
                    <tbody id="DoorSystemTable">
                        <!-- 這裡將動態生成門禁系統的資料列 -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 新增門禁系統訊息 -->
    <div class="modal fade" id="addDoorSystemModal" tabindex="-1" aria-labelledby="addDoorSystemLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDoorSystemLabel">新增門禁系統</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addDoorSystemForm">
                        <div class="mb-3">
                            <label for="Date" class="form-label">日期<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Date" required>
                        </div>
                        <div class="mb-3">
                            <label for="Session" class="form-label">Session<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Session" required>
                        </div>
                        <div class="mb-3">
                            <label for="SessionName" class="form-label">Session Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="SessionName" required>
                        </div>
                        <div class="mb-3">
                            <label for="Room" class="form-label">Room <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Room" required>
                        </div>
                        <div class="mb-3">
                            <label for="TimeRange" class="form-label">時段 <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="TimeRange" required>
                        </div>
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" onclick="addDoorSystem()">新增</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAddDoorSystemModal() {
            // 清空表單中的值
            document.getElementById("addDoorSystemForm").reset();
            $('#addDoorSystemModal').modal('show');
        }

        function addDoorSystem() {
            // 獲取新增門禁系統的各个字段的值
            var date = document.getElementById('Date').value;
            var session = document.getElementById('Session').value;
            var sessionName = document.getElementById('SessionName').value;
            var room = document.getElementById('Room').value;
            var timeRange = document.getElementById('TimeRange').value;

            // 創建一個新的表格行
            var newRow = document.createElement("tr");

            // 在表格行中創建表格數據單元格並添加新增門禁系統訊息
            var dateCell = document.createElement("td");
            dateCell.textContent = date;
            var sessionCell = document.createElement("td");
            sessionCell.textContent = session;
            var sessionNameCell = document.createElement("td");
            sessionNameCell.textContent = sessionName;
            var roomCell = document.createElement("td");
            roomCell.textContent = room;
            var timeRangeCell = document.createElement("td");
            timeRangeCell.textContent = timeRange;

            // 將單元格添加到新的表格行中
            newRow.appendChild(dateCell);
            newRow.appendChild(sessionCell);
            newRow.appendChild(sessionNameCell);
            newRow.appendChild(roomCell);
            newRow.appendChild(timeRangeCell);
            

            // 將新的表格行添加到表格的 tbody 中
            document.getElementById("DoorSystemTable").appendChild(newRow);

            // 添加完畢後關閉模態框
            $('#addDoorSystemModal').modal('hide');
        }
    </script>

</body>

</html>
