@model Heysundue.Models.Joinlist
@using Heysundue.Models;

@{
    ViewData["Title"] = "報名人員管理系統";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>報名人員管理系統</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">報名人員名單</h2>

        <div class="row mb-3">
            <div class="col-auto">
                <button class="btn btn-primary mb-2" onclick="showAddParticipantModal()">新增人員</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <select id="searchColumn" class="form-select text-uppercase bg-light">
                    <option value="all">選擇搜尋欄位:</option>
                    <option value="regNo">Reg. No.</option>
                    <option value="firstName">First Name</option>
                    <option value="lastName">Last Name</option>
                    <option value="chineseName">中文姓名</option>
                    <option value="country">Country</option>
                    <option value="registrationStatus">報到狀態</option>
                </select>
            </div>
            <div class="col-2">
                <input type="text" id="searchKeyword" class="form-control">
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="searchKeyword()">搜尋</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="StartDate">起始日期:</label>
            </div>
            <div class="col-2">
                <input type="date" asp-for="StartDate" class="form-control">
            </div>
            <div class="col-2">
                <label asp-for="EndDate">結束日期:</label>
            </div>
            <div class="col-3">
                <input type="date" asp-for="EndDate" class="form-control">
            </div>
            <div class="col-2">
                <button class="btn btn-primary" onclick="filterByDate()">篩選</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <table class="table">
                    <thead class="custom-table-header">
                        <tr>
                            <th>詳細資訊</th>
                            <th>Reg. No.</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>中文姓名</th>
                            <th>Country</th>
                            <th>報到狀態</th>
                        </tr>
                    </thead>
                    <tbody>@*
        @foreach (var joinlist in Model)
        {
            <tr>
                <td>@joinlist.RegNo</td>
                <td>@joinlist.FirstName</td>
                <td>@joinlist.LastName</td>
                <td>@joinlist.ChineseName</td>
                <td>@joinlist.Country</td>
                <td>@joinlist.RegistrationStatus</td>
            </tr>
        }*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 新增人员模态框 -->
    <div class="modal fade" id="addParticipantModal" tabindex="-1" aria-labelledby="addParticipantModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addParticipantModalLabel">新增人员</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addParticipantForm" method="post" asp-page-handler="">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="RegNo" class="form-label">Reg. No. <span class="text-danger">*</span></label>
                            <input asp-for="RegNo" class="form-control" required />
                            <span asp-validation-for="RegNo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input asp-for="FirstName" class="form-control" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input asp-for="LastName" class="form-control" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ChineseName" class="form-label">中文姓名 <span class="text-danger">*</span></label>
                            <input asp-for="ChineseName" class="form-control" required />
                            <span asp-validation-for="ChineseName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Country <span class="text-danger">*</span></label>
                            <input asp-for="Country" class="form-control" required />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RegistrationStatus" class="form-label">報到狀態 <span class="text-danger">*</span></label>
                            <input asp-for="RegistrationStatus" class="form-control" required />
                            <span asp-validation-for="RegistrationStatus" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">新增</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAddParticipantModal() {
            document.getElementById("addParticipantForm").reset();
            $('#addParticipantModal').modal('show');
        }

        function searchKeyword() {
            var column = document.getElementById("searchColumn").value;
            var keyword = document.getElementById("searchKeyword").value;
