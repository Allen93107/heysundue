@model Heysundue.Views.Home.SetDate3ViewModel

@{
    ViewData["Title"] = "研討會日期設定";
}

<h2>@ViewData["Title"]</h2>


<form method="post">
    <div class="form-group">
        <label asp-for="Person.Name" class="control-label"></label>
        <input asp-for="Person.Name" class="form-control" />
        <span asp-validation-for="Person.Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Person.Age" class="control-label"></label>
        <input asp-for="Person.Age" class="form-control" />
        <span asp-validation-for="Person.Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Person.Gender" class="control-label"></label>
        <input asp-for="Person.Gender" class="form-control" />
        <span asp-validation-for="Person.Gender" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="儲存" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Persons != null)
        {
            foreach (var person in Model.Persons)
            {
                <tr>
                    <td>@person.ID</td>
                    <td>@person.Age</td>
                    <td>@person.Gender</td>
                    <td>@person.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No persons available.</td>
            </tr>
        }
    </tbody>
</table>
