@model Heysundue.Views.Home.Userlist2Model

@{
    ViewData["Title"] = "用戶管理系統";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>用戶管理系統</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">用戶管理名單</h2>

        <div class="row mb-3">
            <div class="col-auto">
                <button type="button" class="btn btn-primary mb-2" onclick="window.location.href='@Url.Action("InputUser2", "Home")'">新增用戶</button>
            </div>
        </div>

        <!-- 搜尋表單 -->
        <div class="row mb-3">
            <div class="col-2">
                <select id="searchColumn" class="form-select text-uppercase bg-light">
                    <option value="all">選擇搜尋欄位:</option>
                    <option value="username">User Name</option>
                    <option value="phone">Phone</option>
                    <option value="email">Email</option>
                    <option value="level">Level</option>
                </select>
            </div>
            <div class="col-2">
                <div id="searchKeywordContainer">
                    <input type="text" id="searchKeyword" class="form-control">
                </div>
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="searchKeyword()">搜尋</button>
                <button class="btn btn-secondary" onclick="clearSearch()">清除搜尋條件</button>
            </div>
        </div>

        <!-- 用戶表格 -->
        <div class="row mb-3">
            <div class="col">
                <form id="editMembersForm" method="post" asp-action="UpdateUser" asp-controller="Home">
                    <table class="table">
                        <thead class="custom-table-header">
                            <tr>
                                <th>ID</th>
                                <th>Creation Date</th>
                                <th>User Name</th>
                                <th>Password</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Level</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="memberTableBody">
                            @foreach (var member in Model.Members)
                            {
                                <tr>
                                    <td>@member.ID</td>
                                    <td>@member.Date?.ToString("yyyy-MM-dd")</td>
                                    <td><input type="text" name="userName_@member.ID" value="@member.UserName" class="form-control" /></td>
                                    <td><input type="text" name="userPassword_@member.ID" value="@member.UserPassword" class="form-control" /></td>
                                    <td><input type="text" name="phone_@member.ID" value="@member.Phone" class="form-control" /></td>
                                    <td><input type="email" name="email_@member.ID" value="@member.Email" class="form-control" /></td>
                                    <td>
                                        <select name="level_@member.ID" class="form-select">
                                            @foreach (var option in Model.LevelOptions)
                                            {
                                                if (option.Value == member.Level)
                                                {
                                                    <option value="@option.Value" selected="selected">@option.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@option.Value">@option.Text</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <button type="submit" name="memberId" value="@member.ID" class="btn btn-success">Save</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>

        <!-- 分頁導航 -->
        <div class="row mb-3">
            <div class="col text-center">
                <button class="btn btn-primary" onclick="navigatePage(@Model.CurrentPage - 1)" @(Model.CurrentPage == 1 ? "disabled" : "")>上一頁</button>
                <p>目前頁數: <span id="currentPage">@Model.CurrentPage</span> / <span id="totalPages">@Model.TotalPages</span></p>
                <button class="btn btn-primary" onclick="navigatePage(@Model.CurrentPage + 1)" @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>下一頁</button>
            </div>
        </div>
    </div>

    <script>
function searchKeyword(page = 1) {
    var column = document.getElementById("searchColumn").value;
    var keyword = document.getElementById("searchKeyword").value;
    var date = document.getElementById("searchDate").value;  // 獲取選定的日期

    $.ajax({
        url: '@Url.Action("SearchUserlist2", "Home")',
        type: 'POST',
        data: {
            searchColumn: column,
            searchKeyword: keyword,
            searchDate: date,
            page: page  // 傳遞頁數給後端
        },
        success: function(response) {
            $('#memberTableBody').html(response.tableHtml); // 更新表格
            updatePagination(response.currentPage, response.totalPages);  // 更新分頁資訊
        },
        error: function(xhr, status, error) {
            console.log("Error: " + error);
        }
    });
}


    function navigatePage(page) {
    var currentPageElement = document.getElementById("currentPage");
    var totalPagesElement = document.getElementById("totalPages");

    if (!currentPageElement || !totalPagesElement) {
        console.error("currentPage 或 totalPages 元素未找到");
        return;
    }

    var currentPage = parseInt(currentPageElement.innerText);
    var totalPages = parseInt(totalPagesElement.innerText);

    // 確保頁數合法
    if (page >= 1 && page <= totalPages) {
        searchKeyword(page);  // 重新搜尋，載入新頁面
    }
}


 function updatePagination(currentPage, totalPages) {
    if (!currentPage || !totalPages) {
        console.error("currentPage 或 totalPages 未正確傳遞");
        return;
    }

    // 更新頁數顯示
    document.getElementById("currentPage").innerText = currentPage;
    document.getElementById("totalPages").innerText = totalPages;

    // 更新按鈕狀態
    document.querySelector(".btn-primary:first-child").disabled = currentPage <= 1;
    document.querySelector(".btn-primary:last-child").disabled = currentPage >= totalPages;
}



    function clearSearch() {
        document.getElementById("searchColumn").value = "all";
        document.getElementById("searchKeyword").value = "";
        searchKeyword();
    }
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
