@model Heysundue.Models.Registration

<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Category設定</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css">
    <style>
        h2 {
            padding: 50px;
            text-align: center;
            font-size: 50px;
        }

        /* 自定義表格樣式 */
        .custom-table-header {
            background-color: #007bff;
            color: white;
        }

        /* 自定義表格行樣式 */
        .custom-table-row {
            background-color: #f8f9fa;
        }

        /* 自定義表格內容樣式 */
        .custom-table-content {
            color: #343a40;
        }
    </style>
</head>

<body>

    <h2>Registration Category設定</h2>

    <div class="container">
        <form method="post">
            <div class="row mb-3">
                <label asp-for="DisplayStatus" class="col-sm-2 col-form-label">顯示狀態:</label>
                <div class="col-sm-10">
                    <select asp-for="DisplayStatus" class="form-select" required>
                        <option value="open">開放</option>
                        <option value="closed">不開放</option>
                    </select>
                    <span asp-validation-for="DisplayStatus" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="DisplayLocation" class="col-sm-2 col-form-label">顯示場合:</label>
                <div class="col-sm-10">
                    <select asp-for="DisplayLocation" class="form-select" required>
                        <option value="domestic">國內</option>
                        <option value="international">國外</option>
                    </select>
                    <span asp-validation-for="DisplayLocation" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ItemName" class="col-sm-2 col-form-label">Item Name:</label>
                <div class="col-sm-10">
                    <input asp-for="ItemName" class="form-control" required>
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TotalAmount" class="col-sm-2 col-form-label">Total Amount:</label>
                <div class="col-sm-10">
                    <input asp-for="TotalAmount" class="form-control" required>
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TotalAmountUSD" class="col-sm-2 col-form-label">Total Amount USD:</label>
                <div class="col-sm-10">
                    <input asp-for="TotalAmountUSD" class="form-control" required>
                    <span asp-validation-for="TotalAmountUSD" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">提交</button>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
