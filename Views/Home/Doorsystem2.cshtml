@model Heysundue.Views.Home.Doorsystem2ViewModel

<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Joinlist.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <form method="post">
            <div class="row mb-3">
                <div class="col-auto">
                    <button class="btn btn-primary mb-2" type="button" onclick="showAddDoorSystemModal()">新增門禁資訊</button>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <table class="table">
                        <thead class="custom-table-header">
                            <tr>
                                <th>日期</th>
                                <th>Session</th>
                                <th>Session Name</th>
                                <th>Room</th>
                                <th>時段</th>
                            </tr>
                        </thead>
                        <tbody id="DoorSystemTable">
                            @if (Model.Doorsystems != null && Model.Doorsystems.Any())
                            {
                                foreach (var doorsystem in Model.Doorsystems)
                                {
                                    <tr>
                                        <td>@doorsystem.Date</td>
                                        <td>@doorsystem.Session</td>
                                        <td>@doorsystem.SessionName</td>
                                        <td>@doorsystem.Room</td>
                                        <td>@doorsystem.TimeRange</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">No door systems available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>

    <!-- 新增门禁系统信息 -->
    <div class="modal fade" id="addDoorSystemModal" tabindex="-1" aria-labelledby="addDoorSystemLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDoorSystemLabel">新增門禁系統</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addDoorSystemForm">
                        <div class="mb-3">
                            <label for="Doorsystem_Date" class="form-label">日期<span class="text-danger">*</span></label>
                            <input id="Doorsystem_Date" name="Doorsystem.Date" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Doorsystem_Session" class="form-label">Session<span class="text-danger">*</span></label>
                            <input id="Doorsystem_Session" name="Doorsystem.Session" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Doorsystem_SessionName" class="form-label">Session Name<span class="text-danger">*</span></label>
                            <input id="Doorsystem_SessionName" name="Doorsystem.SessionName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Doorsystem_Room" class="form-label">Room <span class="text-danger">*</span></label>
                            <input id="Doorsystem_Room" name="Doorsystem.Room" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Doorsystem_TimeRange" class="form-label">時段 <span class="text-danger">*</span></label>
                            <input id="Doorsystem_TimeRange" name="Doorsystem.TimeRange" class="form-control" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" onclick="addDoorSystem()">新增</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showAddDoorSystemModal() {
            document.getElementById("addDoorSystemForm").reset();
            $('#addDoorSystemModal').modal('show');
        }

        function addDoorSystem() {
            var date = document.querySelector('[name="Doorsystem.Date"]').value;
            var session = document.querySelector('[name="Doorsystem.Session"]').value;
            var sessionName = document.querySelector('[name="Doorsystem.SessionName"]').value;
            var room = document.querySelector('[name="Doorsystem.Room"]').value;
            var timeRange = document.querySelector('[name="Doorsystem.TimeRange"]').value;

            var newRow = document.createElement("tr");

            var dateCell = document.createElement("td");
            dateCell.textContent = date;
            var sessionCell = document.createElement("td");
            sessionCell.textContent = session;
            var sessionNameCell = document.createElement("td");
            sessionNameCell.textContent = sessionName;
            var roomCell = document.createElement("td");
            roomCell.textContent = room;
            var timeRangeCell = document.createElement("td");
            timeRangeCell.textContent = timeRange;

            newRow.appendChild(dateCell);
            newRow.appendChild(sessionCell);
            newRow.appendChild(sessionNameCell);
            newRow.appendChild(roomCell);
            newRow.appendChild(timeRangeCell);

            document.getElementById("DoorSystemTable").appendChild(newRow);

            $('#addDoorSystemModal').modal('hide');
        }
    </script>

</body>

</html>
