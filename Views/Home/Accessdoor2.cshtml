@model Heysundue.Models.Accessdoor

<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>門禁系統</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">門禁系統</h2>

        <div class="row mb-3">
            <div class="col-auto">
                <button class="btn btn-primary mb-2" onclick="showAddParticipantModal()">新增人員</button>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-1">
                <label asp-for="StartDate">日期:</label>
            </div>
            <div class="col-2">
                <select asp-for="SearchColumn" class="form-select text-uppercase bg-light">
                    <option value="all">選擇日期:</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-1">
                <label asp-for="Room">Room</label>
            </div>
            <div class="col-2">
                <select asp-for="SearchColumn" class="form-select text-uppercase bg-light">
                    <option value="all">請選擇</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-1">
                <label asp-for="Session">Session</label>
            </div>
            <div class="col-2">
                <select asp-for="SearchColumn" class="form-select text-uppercase bg-light">
                    <option value="all">請選擇</option>
                </select>
            </div>
        </div>
        <div class="col">
            <button class="btn btn-primary" onclick="search()">查詢</button>
            <button class="btn btn-primary" onclick="searchall()">查詢全部</button>
        </div>
    </div>

</body>
</html>
