@model Heysundue.Models.Login

<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登入</title>
    <link rel="icon" href="~/images/yes.png" type="img/123.jpg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">請先進行登入</h2>

        <div class="row justify-content-center">
            <div class="col-4">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">使用者名稱:</label>
                        <input asp-for="Username" class="form-control" required>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">密碼:</label>
                        <input asp-for="Password" type="password" class="form-control" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">登入</button>

                    <p class="mt-3 text-center">忘記密碼?</p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
