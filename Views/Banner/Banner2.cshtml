@using System.IO
@{
    ViewData["Title"] = "Banner 和地圖上傳";

    var imageFolderPath = System.IO.Path.Combine(System.IO.Directory.GetCurrentDirectory(), "wwwroot", "images");

    var imageFiles = System.IO.Directory.GetFiles(imageFolderPath)
                                    .Select(f => System.IO.Path.GetFileName(f))
                                    .ToList();
    var hasFiles = imageFiles.Any();
}

<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <!-- 圖片上傳表單 -->
        <form asp-controller="Banner" asp-action="UploadImage" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="fileUpload" class="form-label">選擇要上傳的圖片：</label>
                <input type="file" class="form-control" id="fileUpload" name="fileUpload">
            </div>
            <button type="submit" class="btn btn-primary">上傳圖片</button>
        </form>

        <!-- 圖片選擇表單 -->
        @if (hasFiles)
        {
            <form asp-controller="Banner" asp-action="SetBanner" method="post" class="mb-3">
                <label for="bannerSelect" class="form-label">選擇圖片作為 Banner：</label>
                <select id="bannerSelect" name="selectedImage" class="form-control mb-2">
                    @foreach (var image in imageFiles)
                    {
                        <option value="@image">@image</option>
                    }
                </select>
                <button type="submit" class="btn btn-success">設置 Banner</button>
            </form>

            <form asp-controller="Banner" asp-action="SetMap" method="post">
                <label for="mapSelect" class="form-label">選擇圖片作為地圖：</label>
                <select id="mapSelect" name="selectedImage" class="form-control mb-2">
                    @foreach (var image in imageFiles)
                    {
                        <option value="@image">@image</option>
                    }
                </select>
                <button type="submit" class="btn btn-secondary">設置地圖</button>
            </form>
        }
        else
        {
            <p class="text-danger">當前沒有可用的圖片。</p>
        }

        <!-- 顯示操作結果 -->
        @if (TempData["UploadResult"] != null)
        {
            <div class="alert alert-info mt-3">@TempData["UploadResult"]</div>
        }

        @if (TempData["ActionResult"] != null)
        {
            <div class="alert alert-success mt-3">@TempData["ActionResult"]</div>
        }
    </div>
</body>

</html>
